@{
    ViewData["Title"] = "Email Confirmed";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Email Confirmed</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-success" role="alert">
                        <h4 class="alert-heading">Your email has been confirmed!</h4>
                        <p>Thank you for verifying your email address. Your account is now fully activated.</p>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a asp-action="Login" class="btn btn-primary">Log in</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 