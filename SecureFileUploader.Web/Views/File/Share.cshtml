@model SecureFileUploader.Web.Models.File.ShareFileViewModel

@{
    ViewData["Title"] = "Share File";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Share File</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h4 class="alert-heading">File Details</h4>
                        <p><strong>File Name:</strong> @Model.FileName</p>
                        <p><strong>File Size:</strong> @(Model.FileSize / 1024) KB</p>
                        <p><strong>File Type:</strong> @Model.ContentType</p>
                    </div>

                    <form asp-action="Share" method="post">
                        <input type="hidden" asp-for="FileId" />
                        <input type="hidden" asp-for="FileName" />
                        <input type="hidden" asp-for="FileSize" />
                        <input type="hidden" asp-for="ContentType" />

                        <div class="form-group">
                            <label asp-for="RecipientEmail" class="control-label"></label>
                            <input asp-for="RecipientEmail" class="form-control" placeholder="Enter recipient's email address" />
                            <span asp-validation-for="RecipientEmail" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="Message" class="control-label"></label>
                            <textarea asp-for="Message" class="form-control" rows="3" placeholder="Add an optional message"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">Share File</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 