@model SecureFileUploader.Web.Models.File.FilePasswordViewModel

@{
    ViewData["Title"] = "Enter Password";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Enter Password to Decrypt File</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-shield-lock"></i> 
                        Your password is needed to decrypt your private key, which is required to access this file.
                    </div>
                    
                    <form asp-action="DownloadWithPassword" method="post">
                        <input type="hidden" asp-for="FileId" />
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Your Password</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-download"></i> Download File
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 